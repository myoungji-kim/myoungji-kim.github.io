SELECT  
m.groupSno, (회원등급sno) 
m.memNm, (이름)
m.memberFl, (회원구분 'personal/business')
m.sexFl, (성별)
m.birthDt, (생년월일)
m.email, (이메일)
m.zipcode, (우편번호)
m.zonecode, (우편번호 5자리)
m.address, (주소)
m.addressSub, (상세주소)
m.phone, (전화번호)
m.cellPhone, (핸드폰)
m.fax, (팩스번호)
m.company, (회사명)
m.service, (업태)
m.item, (종목)
m.busiNo, (사업자번호)
m.ceo, (대표자)
m.comZipcode, (사업장우편번호)
m.comZonecode, (사업장우편번호 5자리)
m.comAddress, (사업장주소)
m.comAddressSub, (사업장상세주소)
m.mileage, (적립금)
m.deposit, (예치금)
m.saleAmt, (총구매금액)
m.adultFl, (성인여부)
m.adultConfirmDt, (성인여부인증시간)
m.mallSno, (상점번호)
m.phoneCountryCode, (전화번호 국가코드)
m.cellPhoneCountryCode, (핸드폰 국가코드)

mg.groupNm, 
mg.groupSort, 
mg.groupMarkGb, 
mg.groupImageGb, 
mg.groupIcon, 
mg.groupImage, 
mg.groupIconUpload, 
mg.groupImageUpload, 
mg.settleGb, 
mg.fixedRateOption, 
mg.fixedRatePrice, 
mg.fixedOrderTypeDc, 
mg.dcLine, 
mg.dcType, 
mg.dcPercent, 
mg.dcPrice, 
mg.dcBrandInfo, 
mg.dcExOption, 
mg.dcExScm, 
mg.dcExCategory, 
mg.dcExBrand, 
mg.dcExGoods, 
mg.fixedOrderTypeOverlapDc, 
mg.overlapDcLine, 
mg.overlapDcType, 
mg.overlapDcPercent, 
mg.overlapDcPrice, 
mg.overlapDcOption, 
mg.overlapDcScm, 
mg.overlapDcCategory, 
mg.overlapDcBrand, 
mg.overlapDcGoods, 
mg.fixedOrderTypeMileage, 
mg.mileageLine, 
mg.mileageType, 
mg.mileagePercent, 
mg.mileagePrice, 
mg.deliveryFree, 
mg.groupCoupon, 
mg.apprExclusionOfRatingFl, 
mg.managerNo  

FROM es_member m  
INNER JOIN es_memberGroup mg ON m.groupSno = mg.sno    

WHERE m.appFl = 'y' AND m.sleepFl = 'n' AND m.memNo = ? AND m.memId = ? AND m.memPw = ? 